{
    "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 200,
        "attributePosition": "auto"
    },
    "files": {
        "maxSize": 2097152
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noParameterAssign": "off",
                "noDescendingSpecificity": "off"
            },
            "complexity": {
                "noArguments": "off"
            }
        },
        "includes": [
            "**",
            "!**/*.svelte"
        ]
    },
    "javascript": {
        "formatter": {
            "jsxQuoteStyle": "single",
            "trailingCommas": "es5",
            "semicolons": "always",
            "quoteStyle": "single"
        }
    }
}