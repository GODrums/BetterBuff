{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 200,
        "attributePosition": "auto"
    },
    "organizeImports": { "enabled": true },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noParameterAssign": "off",
                "noArguments": "off"
            }
        },
        "ignore": ["**/*.svelte", "**/*.json"]
    },
    "javascript": {
        "formatter": {
            "jsxQuoteStyle": "single",
            "trailingCommas": "es5",
            "semicolons": "always",
            "bracketSameLine": false,
            "quoteStyle": "single",
            "attributePosition": "auto"
        }
    }
}
