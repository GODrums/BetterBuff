{
	"name": "betterbuff",
	"displayName": "BetterBuff",
	"description": "Enhance your website experience on Buff163",
	"author": "Rums",
	"version": "1.0.0",
	"license": "MIT",
	"homepage": "https://github.com/GODrums/BetterBuff",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox --mv3",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox --mv3",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox --mv3",
		"update": "pnpm up --latest",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"postinstall": "wxt prepare",
		"submit": "wxt submit",
		"submit:dry": "wxt submit --dry-run",
		"lint": "biome lint --write src/",
		"format": "biome format --write src/ && biome check --write src/"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@tailwindcss/typography": "^0.5.13",
		"@tsconfig/svelte": "^5.0.4",
		"@wxt-dev/module-svelte": "^2.0.3",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.11.1",
		"postcss": "^8.4.38",
		"publish-browser-extension": "^2.1.3",
		"svelte": "^5.36.17",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^6.3.5",
		"wxt": "^0.20.7"
	},
	"dependencies": {
		"@types/chrome": "^0.0.268",
		"@wxt-dev/webextension-polyfill": "^1.0.0",
		"bits-ui": "^0.21.9",
		"clsx": "^2.1.1",
		"decimal.js": "^10.4.3",
		"svelte-radix": "^1.1.0",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"webextension-polyfill": "^0.12.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"spawn-sync",
			"svelte-preprocess"
		]
	}
}